<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.study.web.dao.MemberMapper">

    <resultMap id="MemberResult" type="com.example.study.web.model.member.Member">
        <result property="loginId" column="login_id"/>
        <result property="name" column="name"/>
        <result property="password" column="password"/>
        <result property="createDate" column="create_date" />
        <result property="updateDate" column="update_date" />
    </resultMap>

    <select id="selectMemberAll" resultMap="MemberResult">
        SELECT id,
               login_id,
               name,
               password,
               create_date,
               update_date
        FROM member
        WHERE 1 = 1
    </select>

    <select id="selectMemberById" parameterType="String" resultMap="MemberResult">
        SELECT id,
               login_id,
               name,
               password,
               create_date,
               update_date
        FROM member
        WHERE id = #{id}
    </select>

    <insert id="insertMember" parameterType="com.example.study.web.model.member.Member">
        INSERT INTO member (login_id, name, password, create_date, update_date)
        VALUES(#{loginId}, #{name}, #{password}, NOW(), NOW())
    </insert>

    <update id="updateMember" parameterType="com.example.study.web.model.member.Member">
        UPDATE member
           SET login_id = #{loginId},
               name = #{name},
               password = #{password},
               create_date = #{createDate},
               update_date = NOW()
         WHERE id = #{id}
    </update>

    <delete id="deleteMember" parameterType="String">
        DELETE FROM member WHERE id = #{Id}
    </delete>

</mapper>